{% extends 'base.html.twig' %}

{% block body %}
	<!--Alert MESSAGE for query response-->
	{% for message in app.flashes('success') %}
		<div class='alert alert-success'>
			<h3>
				{{message}}
			</h3>
		</div>
	{% endfor %}
	<br>
	<div class='container'>
		<h2>Dishes</h2>

		<br>
		<table class='table table-striped'>

			<thead>
				<tr>
					<td>id</td>
					<td>name</td>
					<td>description</td>
					<td>price</td>
					<td>
						<a href="{{ path ('dishes.newDish')}}">
							create
						</a>
					</td>
				</tr>
			</thead>
			<tbody>
				{% for dish in dishes %}
					<tr>
						<td>
							{{dish.id}}
						</td>
						<td>
							<a href="{{ path ('dishes.showImgDish',{id: dish.id})}}">
								{{dish.name}}
							</a>
						</td>
						<td>
							{{dish.description}}
						</td>
						<td>
							{{dish.price}}
						</td>
						<td>
							{{dish.description}}
						</td>
						<td>
							<a href="{{ path ('dishes.deleteDish',{id: dish.id})}}">
								Delete
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>

		</table>
	</div>
{% endblock %}
